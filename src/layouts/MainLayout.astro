---
// src/layouts/MainLayout.astro
import '../styles/global.css';

export interface Props {
  title: string;
}

const { title } = Astro.props;

// Componentes auxiliares definidos con funciones normales de JS
function getGithubIcon() {
  return `<svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
  </svg>`;
}

function getLinkedinIcon() {
  return `<svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
    <path d="M4.98 3.5c0 1.381-1.11 2.5-2.48 2.5s-2.48-1.119-2.48-2.5c0-1.38 1.11-2.5 2.48-2.5s2.48 1.12 2.48 2.5zm.02 4.5h-5v16h5v-16zm7.982 0h-4.968v16h4.969v-8.399c0-4.67 6.029-5.052 6.029 0v8.399h4.988v-10.131c0-7.88-8.922-7.593-11.018-3.714v-2.155z"/>
  </svg>`;
}

function getTwitterIcon() {
  return `<svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
    <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
  </svg>`;
}

// Mapeo de iconos para reutilización
const socialIcons = {
  github: getGithubIcon(),
  linkedin: getLinkedinIcon(),
  twitter: getTwitterIcon()
};

const currentYear = new Date().getFullYear();
---

<!DOCTYPE html>
<html lang="es" class="">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700;800&family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <title>{title} | El Futbolista del Código</title>
  </head>
  <body class="bg-gradient-to-br from-gray-50 to-gray-100 dark:from-valencia-black dark:to-gray-900 min-h-screen font-montserrat text-gray-800 dark:text-valencia-white">
    <div class="relative">
      <!-- Decoración de fondo - Balones de fútbol sutiles -->
      <div class="absolute inset-0 overflow-hidden pointer-events-none z-0 opacity-5">
        <div class="absolute top-20 left-10 w-24 h-24 rounded-full border-4 border-gray-800 dark:border-valencia-yellow"></div>
        <div class="absolute top-60 right-20 w-16 h-16 rounded-full border-4 border-gray-800 dark:border-valencia-yellow"></div>
        <div class="absolute bottom-40 left-1/4 w-32 h-32 rounded-full border-4 border-gray-800 dark:border-valencia-yellow"></div>
      </div>
      
      <!-- Header con Navbar mejorado -->
      <header class="sticky top-0 z-50 bg-gradient-to-r from-valencia-orange to-valencia-red-600 dark:from-valencia-orange-800 dark:to-valencia-red-900 text-valencia-white shadow-lg">
        <div class="container mx-auto px-4 py-0">
          <nav class="flex justify-between items-center h-16">
            <a href="/" class="text-xl md:text-2xl font-bold flex items-center gap-2 hover:opacity-90 transition">
              <img src="/img/valencia-cf-logo.png" alt="Escudo del Valencia CF" class="w-8 h-8 object-contain" />
              <span class="font-poppins tracking-tight">El Futbolista del Código</span>
            </a>
            
            <div class="hidden md:flex items-center space-x-1">
              <!-- Enlaces de navegación -->
              <a href="/" class="px-3 py-2 rounded-md text-sm font-medium hover:bg-valencia-orange-700 dark:hover:bg-valencia-orange-900 transition duration-200 relative group">
                Inicio
                <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-valencia-yellow group-hover:w-full transition-all duration-300"></span>
              </a>
              <a href="/about" class="px-3 py-2 rounded-md text-sm font-medium hover:bg-valencia-orange-700 dark:hover:bg-valencia-orange-900 transition duration-200 relative group">
                Perfil
                <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-valencia-yellow group-hover:w-full transition-all duration-300"></span>
              </a>
              <a href="/education" class="px-3 py-2 rounded-md text-sm font-medium hover:bg-valencia-orange-700 dark:hover:bg-valencia-orange-900 transition duration-200 relative group">
                Academia
                <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-valencia-yellow group-hover:w-full transition-all duration-300"></span>
              </a>
              <a href="/experience" class="px-3 py-2 rounded-md text-sm font-medium hover:bg-valencia-orange-700 dark:hover:bg-valencia-orange-900 transition duration-200 relative group">
                Partidos
                <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-valencia-yellow group-hover:w-full transition-all duration-300"></span>
              </a>
              <a href="/projects" class="px-3 py-2 rounded-md text-sm font-medium hover:bg-valencia-orange-700 dark:hover:bg-valencia-orange-900 transition duration-200 relative group">
                Trofeos
                <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-valencia-yellow group-hover:w-full transition-all duration-300"></span>
              </a>
              <a href="/skills" class="px-3 py-2 rounded-md text-sm font-medium hover:bg-valencia-orange-700 dark:hover:bg-valencia-orange-900 transition duration-200 relative group">
                Jugadas
                <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-valencia-yellow group-hover:w-full transition-all duration-300"></span>
              </a>
              <a href="/contact" class="px-3 py-2 rounded-md text-sm font-medium hover:bg-valencia-orange-700 dark:hover:bg-valencia-orange-900 transition duration-200 relative group">
                Fichajes
                <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-valencia-yellow group-hover:w-full transition-all duration-300"></span>
              </a>
              
              <!-- Botón de cambio de modo oscuro -->
              <button id="theme-toggle" class="ml-4 p-2 rounded-full bg-valencia-white dark:bg-valencia-yellow text-valencia-orange dark:text-valencia-black hover:bg-gray-100 dark:hover:bg-valencia-yellow-400 transition-colors duration-300 focus:outline-none">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 hidden dark:block" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
                </svg>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 block dark:hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
                </svg>
              </button>
            </div>
            
            <!-- Menú móvil - se implementará con JS -->
            <div class="md:hidden flex items-center">
              <!-- Botón de cambio de modo oscuro para móvil -->
              <button id="theme-toggle-mobile" class="p-2 rounded-full bg-valencia-white dark:bg-valencia-yellow text-valencia-orange dark:text-valencia-black hover:bg-gray-100 dark:hover:bg-valencia-yellow-400 transition-colors duration-300 focus:outline-none mr-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 hidden dark:block" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
                </svg>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 block dark:hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
                </svg>
              </button>
              
              <button class="text-valencia-white p-2 focus:outline-none">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-6 h-6">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                </svg>
              </button>
            </div>
          </nav>
        </div>
      </header>
      
      <!-- Contenido principal con shadows mejorados -->
      <main class="relative z-10 min-h-[calc(100vh-13rem)]">
        <slot />
      </main>
      
      <!-- Footer mejorado -->
      <footer class="bg-gradient-to-r from-valencia-orange-800 to-valencia-red-800 dark:from-valencia-black dark:to-gray-900 text-valencia-white py-8 z-10 relative">
        <div class="container mx-auto px-4">
          <div class="flex flex-col md:flex-row justify-between items-center">
            <div class="mb-6 md:mb-0">
              <div class="flex items-center justify-center md:justify-start gap-2 mb-3">
                <img src="/img/valencia-cf-logo.png" alt="Escudo del Valencia CF" class="w-8 h-8 object-contain" />
                <span class="font-poppins font-bold">El Futbolista del Código</span>
              </div>
              <p class="text-sm text-gray-300 text-center md:text-left">Combinando la pasión por el código con la estrategia del fútbol</p>
            </div>
            
            <div class="flex flex-col items-center md:items-end">
              <div class="flex space-x-4 mb-4">
                <!-- Iconos de redes sociales -->
                <a href="#" class="text-gray-300 hover:text-valencia-yellow transition-colors duration-300">
                  <Fragment set:html={socialIcons.github} />
                </a>
                <a href="#" class="text-gray-300 hover:text-valencia-yellow transition-colors duration-300">
                  <Fragment set:html={socialIcons.linkedin} />
                </a>
                <a href="#" class="text-gray-300 hover:text-valencia-yellow transition-colors duration-300">
                  <Fragment set:html={socialIcons.twitter} />
                </a>
              </div>
              <p class="text-xs text-gray-400">&copy; {currentYear} El Futbolista del Código</p>
            </div>
          </div>
        </div>
      </footer>
    </div>

    <script>
      // Script para manejar el cambio de tema
      document.addEventListener('DOMContentLoaded', () => {
        const themeToggle = document.getElementById('theme-toggle');
        const themeToggleMobile = document.getElementById('theme-toggle-mobile');
        const html = document.documentElement;
        
        // Verificar si hay una preferencia guardada
        const savedTheme = localStorage.getItem('theme');
        if (savedTheme === 'dark' || (!savedTheme && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
          html.classList.add('dark');
        }
        
        // Función para cambiar el tema
        const toggleTheme = () => {
          if (html.classList.contains('dark')) {
            html.classList.remove('dark');
            localStorage.setItem('theme', 'light');
          } else {
            html.classList.add('dark');
            localStorage.setItem('theme', 'dark');
          }
        };
        
        // Agregar eventos de clic a los botones
        if (themeToggle) {
          themeToggle.addEventListener('click', toggleTheme);
        }
        if (themeToggleMobile) {
          themeToggleMobile.addEventListener('click', toggleTheme);
        }
      });
    </script>
  </body>
</html>