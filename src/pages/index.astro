---
// src/pages/index.astro
import MainLayout from '../layouts/MainLayout.astro';
import HeroSection from '../components/Hero/HeroSection';
import StatsSection from '../components/Stats/StatsSection';
import SkillsField from '../components/Field/SkillsField';
import TrophyCase from '../components/Trophies/TrophyCase';
---

<MainLayout title="Presentación">
  <!-- Sección Hero principal -->
  <HeroSection client:load />
  
  <!-- Estadísticas del jugador -->
  <StatsSection client:visible />
  
  <!-- Sección de habilidades - campo de fútbol -->
  <section class="py-16 container mx-auto px-4">
    <SkillsField client:visible />
  </section>
  
  <!-- Proyectos destacados (trofeos) -->
  <section class="py-16 bg-gray-50 dark:bg-valencia-black/90 border-t border-b border-gray-200 dark:border-gray-800">
    <div class="container mx-auto px-4">
      <TrophyCase 
        client:visible 
        projects={[
          {
            title: 'Plataforma E-learning',
            category: 'Aplicación Web',
            description: 'Desarrollo de una plataforma completa para cursos online con sistema de pagos, gestión de contenido y analíticas en tiempo real.',
            link: '#',
            technologies: ['React', 'Node.js', 'MongoDB', 'Stripe API']
          },
          {
            title: 'App de Gestión Financiera',
            category: 'Aplicación Móvil',
            description: 'Aplicación móvil para gestión de finanzas personales con visualización de datos, seguimiento de presupuesto y alertas personalizadas.',
            link: '#',
            technologies: ['React Native', 'Firebase', 'Redux']
          },
          {
            title: 'Dashboard Empresarial',
            category: 'Plataforma SaaS',
            description: 'Dashboard interactivo para análisis de datos empresariales con múltiples integraciones y reportes personalizados.',
            link: '#',
            technologies: ['Vue.js', 'Express', 'PostgreSQL', 'Docker']
          },
        ]}
      />
    </div>
  </section>
  
  <!-- Sección CTA - Contacto -->
  <section class="py-20 bg-gradient-to-br from-valencia-orange to-valencia-red-700 dark:from-valencia-orange-800 dark:to-valencia-red-900 text-valencia-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-4xl font-bold mb-6">¿Listo para ficharme en tu equipo?</h2>
      <p class="max-w-2xl mx-auto text-xl mb-8 text-valencia-white/90 dark:text-valencia-white/80">
        Si buscas un desarrollador que aporte valor desde el primer minuto, ¡hablemos!
      </p>
      <a 
        href="/contact" 
        class="inline-block bg-valencia-white text-valencia-orange dark:bg-valencia-yellow dark:text-valencia-black font-bold py-3 px-8 rounded-full shadow-lg hover:bg-valencia-yellow hover:text-valencia-black dark:hover:bg-valencia-white dark:hover:text-valencia-orange transition-all transform hover:-translate-y-1"
      >
        Contactar Ahora
      </a>
    </div>
  </section>
</MainLayout>

<style>
  /* Estilos específicos para la página de inicio */
  section {
    position: relative;
  }

  /* Decoración para la sección de trofeos */
  section:nth-child(3)::before {
    content: '';
    position: absolute;
    top: -10px;
    left: 0;
    right: 0;
    height: 20px;
    background-image: linear-gradient(45deg, #f9fafb 25%, transparent 25%, transparent 75%, #f9fafb 75%, #f9fafb), 
                      linear-gradient(45deg, #f9fafb 25%, transparent 25%, transparent 75%, #f9fafb 75%, #f9fafb);
    background-size: 20px 20px;
    background-position: 0 0, 10px 10px;
    z-index: 10;
  }

  @media (prefers-color-scheme: dark) {
    section:nth-child(3)::before {
      background-image: linear-gradient(45deg, #111827 25%, transparent 25%, transparent 75%, #111827 75%, #111827), 
                        linear-gradient(45deg, #111827 25%, transparent 25%, transparent 75%, #111827 75%, #111827);
    }
  }
</style>